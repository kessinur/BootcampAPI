
<div class="container">
    <hr />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="">Create New</button><br /><br />
    <label>Name</label>
    <input type="text" class="form-control" id="cmbName" placeholder="Name" onchange="GetByStock()" />
    @*<select id="cmbName" data-placement="Choose" class="form-control" onchange=""></select>*@
    <label>Price</label>
    <input type="text" class="form-control" id="cmbPrice" placeholder="Price" onchange="GetByStock()" />
    @*<select id="cmbPrice" data-placement="Choose" class="form-control" onchange=""></select>*@
    <label>Stock</label>
    <input type="text" class="form-control" id="cmbStock" placeholder="Stock" onchange="GetByStock()" /><br /><br />
    @*<select id="cmbStock" data-placement="Choose" class="form-control" onchange=""></select>*@
    <table class="table table-hover" id="table">
        <thead>
            <tr>
                <th>
                    No. 
                </th>
                <th>
                    Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Stock
                </th>
                <th>
                    Supplier Name
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Item Form</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="Id">Id</label>
                        <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="Name" placeholder="Name" />
                    </div>
                    <div class="form-group">
                        <label for="Price">Price</label>
                        <input type="text" class="form-control" id="Price" placeholder="Price" />
                    </div>
                    <div class="form-group">
                        <label for="Stock">Stock</label>
                        <input type="text" class="form-control" id="Stock" placeholder="Stock" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Supplier Name</label>
                        <select id="Suppliers" data-placement="Choose" class="form-control"></select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Save" onclick="Save();">Add</button>
                <button type="button" class="btn btn-primary" id="Update" style="display:none;" onclick="Edit();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/Scripts/sweetalert.min.js"></script>
    <link href="~/Scripts/sweetalert.css" rel="stylesheet" />
    <script src="~/Scripts/datatables/jquery.dataTables.min.js"></script>
    <link href="~/Scripts/datatables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/ItemMaster/RetrievingItem.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}